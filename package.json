{
  "name": "eac-client",
  "version": "1.0.0",
  "description": "Education Artistique et Culturelle",
  "main": "server.js",
  "scripts": {
    "start": "nodemon -e html,js,css server.js",
    "lint": "standard --fix --plugin html '**/*.html'",
    "watch": "concurrently \"riot -w --ext html tags js/src/tags.js\" \"babel js/src --out-dir js/dist --watch\"",
    "build": "riot --ext html tags js/src/tags.js && babel js/src --out-dir js/dist && rm js/src/tags.js",
    "postinstall": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betagouv/eac.git"
  },
  "author": "BetaGouv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/betagouv/eac/issues"
  },
  "homepage": "https://github.com/betagouv/eac#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^3.6.0",
    "eslint-plugin-html": "^4.0.5",
    "http-server": "^0.11.1",
    "riot": "^3.10.3",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "express": "^4.16.3",
    "nodemon": "^1.17.5",
    "serve-static": "^1.13.2"
  }
}
